  content: 'Â·';
  position: absolute;
  top: 0;
  left: 0;
}

.modal .modal_ctn .btn_1,
.modal .modal_ctn .btn_2 {
  padding: 0;
  margin-top: 21rpx;
  width: 199rpx;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: 400;
}

.modal .modal_ctn .btn_1 {
  color: #fff;
  background-color: #567bf3;
}

.modal .modal_ctn .btn_2 {
  color: #666666;
  background-color: #dddddd;
