/* components/loginAuth_modal/loginAuth_modal.wxss */

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal .modal_ctn {
  padding: 31rpx 35rpx 41rpx 33rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
  /* width: 367rpx; */
  width: 420rpx;
  height: 508rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.modal .modal_ctn .modal_ctn_t {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
  border-bottom: 1rpx dashed #d0d0d7;
}

.modal .modal_ctn .modal_ctn_t .default_avatar {
  width: 93rpx;
  height: 93rpx;
  border-radius: 50%;
  background-color: #f6f6f7;
}

.modal .modal_ctn .modal_ctn_t .modal_title {
  margin-top: 19rpx;
  margin-bottom: 25rpx;
  font-size: 28rpx;
  line-height: 1;
  color: #567bf3;
}

.modal .modal_ctn .modal_ctn_c {
  padding-top: 9rpx;
  padding-bottom: 12rpx;
  width: 100%;
  font-size: 23rpx;
  line-height: 1;
  color: #1f1f4b;
}

.modal .modal_ctn .modal_ctn_c view {
  padding: 0 11rpx;
  margin-top: 16rpx;
  position: relative;
  text-align: left;
}

