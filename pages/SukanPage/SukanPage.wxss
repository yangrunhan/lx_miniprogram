/* pages/SukanPage/SukanPage.wxss */

.sukan_btn{
  position: fixed;
  bottom: 70rpx;
  width: 340rpx !important;
  background-color: #f73434;
  text-align: center;
  height: 70rpx;
  line-height: 62rpx !important;
  color: #fff;
  border-radius: 20px !important;
  left: 50%;
  margin-left: -170rpx !important;
  border: 1px solid #fff;
  font-weight: normal !important;
  padding: 0 !important;
}


.wx_login_mod{
  display: block;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.40);
  width: 100%;
  height: 322rpx;
  padding-top: 60rpx;
  z-index: 9999;

}
.wx_login_mod .info{
  display: block;
  box-sizing: border-box;
  text-align: center;
  color: #ffffff;
  font-size: 40rpx;

}
.wx_login_mod .btn{
  display: block;
  box-sizing: border-box;
  width: 80%;
  margin-top: 40rpx;
  background: #ff4646;
  color: #ffffff;
}

.wx_login_mod .wx_login_close{
  
  display: block;
  box-sizing: border-box;
  position: fixed;
  right: 20rpx;
  bottom: 270rpx;
  color: #ffffff;
}

.wx_login_mod input.section{
  text-align: center;
  color:#ffffff
}