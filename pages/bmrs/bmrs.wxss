.discipline,
.not_discipline {
  flex: 1;
}

.switch_btn {
  margin: 0 10rpx;
  position: relative;
  display: flex;
  align-items: center;
  width: 160rpx;
  height: 45rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;

  transition: all .3s ease-in;
}

.position_l::after,
.position_r::after {
  content: '';
  display: block;
  position: absolute;

  width: 41rpx;
  height: 41rpx;
  border-radius: 8rpx;
  background-color: #fff;
  z-index: 99;
}

.position_l {
  padding-left: 53rpx;
  background-color: #DCD9D4;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.15) 0%, rgba(0, 0, 0, 0.15) 100%), radial-gradient(at top center, rgba(255, 255, 255, 0.40) 0%, rgba(0, 0, 0, 0.40) 120%) #989898;
  background-blend-mode: multiply, multiply;
}

.position_l::after {
  left: 3rpx;
}

.position_r {
  padding-left: 9rpx;
  background: url('http://hn.offcn.com/zg/pocket/images/zwpp_icon_7.png')no-repeat top center;
  background-size: 100% 100%;
}

.position_r::after {
  /* right: 3rpx; */
  left: 118rpx;
}

.inquire_btn {
  padding: 0;
  margin-top: 39rpx;
  width: 100% !important;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  background-color: #567bf3;
  border-radius: 10rpx;
}


.wx_login_mod{
  display: block;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.40);
  width: 100%;
  height: 322rpx;
  padding-top: 60rpx;
  z-index: 9999;

}
.wx_login_mod .info{
  display: block;
  box-sizing: border-box;
  text-align: center;
  color: #ffffff;
  font-size: 40rpx;

}
.wx_login_mod .btn{
  display: block;
  box-sizing: border-box;
  width: 80%;
  margin-top: 40rpx;
  background: #ff4646;
  color: #ffffff;
}

.wx_login_mod .wx_login_close{
  
  display: block;
  box-sizing: border-box;
  position: fixed;
  right: 20rpx;
  bottom: 270rpx;
  color: #ffffff;
}

.wx_login_mod input.section{
  text-align: center;
  color:#ffffff
}


/* 手机号授权 */
.phone_auth_modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.phone_auth_modal .modal_ctn {
  padding: 31rpx 35rpx 41rpx 33rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
  width: 500rpx;
  /* height: 400rpx; */
  border-radius: 16rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.phone_auth_modal .modal_ctn .btn_ctn {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.phone_auth_modal .modal_ctn .btn_ctn .title {
  font-size: 28rpx;
}

.phone_auth_modal .modal_ctn .btn_ctn .no_bind,
.phone_auth_modal .modal_ctn .btn_ctn .bind_now {
  padding: 0;
  margin-top: 21rpx;
  width: 150rpx !important;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: 400;
}

.phone_auth_modal .modal_ctn .btn_ctn .no_bind {
  color: #666666;
  background-color: #dddddd;
}

.phone_auth_modal .modal_ctn .btn_ctn .bind_now {
  color: #fff;
  background-color: #567bf3;
}