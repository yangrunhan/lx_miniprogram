.top {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 172rpx;
  line-height: 1;
  background: url('http://hn.offcn.com/zg/pocket/images/zwpp_1.png')no-repeat top center;
  background-size: 100% 100%;
  color: #fff;
  font-weight: bold;
  text-shadow: 1.5px 2.598px 7px rgba(106, 135, 226, 0.35);
  position: relative;
}

.top_title_1 {
  font-size: 30rpx;
}

.top_title_2 {
  margin-top: 23rpx;
  font-size: 38rpx;
}

.progress {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 50rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 1rpx solid #f2e3f3;
}

.progress::after {
  content: '';
  display: block;
  width: 62rpx;
  height: 62rpx;
  background: url('http://hn.offcn.com/zg/pocket/images/zwpp_3.png')no-repeat top center;
  background-size: 100% 100%;
}

.form_ctn {
