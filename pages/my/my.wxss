/* pages/my/my.wxss */


.bg {
  display: flex;
  width: 100%;
  height: 368rpx;
  background: url('http://hn.offcn.com/zg/pocket/images/my_bg.png')no-repeat top center;
  background-size: 100% 100%;
}

.page_title {
  text-align: center;
  margin: 71rpx auto 0;
  font-size: 36rpx;
  color: #fff;
}

.card {
  margin: -202rpx auto 0;
  width: 703rpx;
  height: 712rpx;
  border-radius: 20rpx;
  background-color: #fff;
  overflow: hidden;
}

.user_info {
  display: flex;
  align-items: center;
  margin: 39rpx 0 0 32rpx;
}

.user_info .avatar_ctn {
  width: 133rpx;
  height: 133rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 0 53rpx 13rpx rgba(85, 116, 229, 0.1);
  overflow: hidden;
}

.user_info .avatar_ctn .avatar {
  width: 100%;
  height: 100%;
}

.user_info .nickname {
  margin-left: 24rpx;
  font-size: 32rpx;
  color: #141437;
}


/* 列表 */
.list {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.list .row {
  margin-top: 26rpx;
  display: flex;
  align-items: center;
  width: 627rpx;
  height: 99rpx;
  border-radius: 12rpx;
}

.list .row .row_icon {
  margin-left: 25rpx;
  width: 51rpx;
  height: 51rpx;
  border-radius: 50%;
}

.list .row .row_text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #fff;
}

.row_icon_1 {
  background: url('http://hn.offcn.com/zg/pocket/images/my_icon_1.png')no-repeat center center #f7838d;
  background-size: 17rpx 28rpx;
}

.row_icon_2 {
  background: url('http://hn.offcn.com/zg/pocket/images/my_icon_2.png')no-repeat center center #8e90c4;
  background-size: 25rpx 28rpx;
}


.row_1 {
  background-image: -moz-linear-gradient(0deg, rgb(255, 157, 151) 0%, rgb(254, 136, 148) 100%);
  background-image: -webkit-linear-gradient(0deg, rgb(255, 157, 151) 0%, rgb(254, 136, 148) 100%);
  background-image: -ms-linear-gradient(0deg, rgb(255, 157, 151) 0%, rgb(254, 136, 148) 100%);
}

.row_2 {
  background-image: -moz-linear-gradient(0deg, rgb(150, 152, 215) 0%, rgb(123, 125, 187) 100%);
  background-image: -webkit-linear-gradient(0deg, rgb(150, 152, 215) 0%, rgb(123, 125, 187) 100%);
  background-image: -ms-linear-gradient(0deg, rgb(150, 152, 215) 0%, rgb(123, 125, 187) 100%);
}