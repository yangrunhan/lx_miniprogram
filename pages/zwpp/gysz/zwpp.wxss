  flex: 1;
}

.switch_btn {
  margin: 0 10rpx;
  position: relative;
  display: flex;
  align-items: center;
  width: 160rpx;
  height: 45rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;

  transition: all .3s ease-in;
}

.position_l::after,
.position_r::after {
  content: '';
  display: block;
  position: absolute;

  width: 41rpx;
  height: 41rpx;
  border-radius: 8rpx;
  background-color: #fff;
  z-index: 99;
}

.position_l {
  padding-left: 53rpx;
  background-color: #DCD9D4;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.15) 0%, rgba(0, 0, 0, 0.15) 100%), radial-gradient(at top center, rgba(255, 255, 255, 0.40) 0%, rgba(0, 0, 0, 0.40) 120%) #989898;
  background-blend-mode: multiply, multiply;
}

.position_l::after {
  left: 3rpx;
}

.position_r {
  padding-left: 9rpx;
  background: url('http://hn.offcn.com/zg/pocket/images/zwpp_icon_7.png')no-repeat top center;
  background-size: 100% 100%;
}

.position_r::after {
  /* right: 3rpx; */
  left: 118rpx;
}

