.top {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 172rpx;
  line-height: 1;
  background: url('http://hn.offcn.com/zg/pocket/images/zwpp_1.png')no-repeat top center;
  background-size: 100% 100%;
